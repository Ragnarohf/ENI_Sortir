{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}


{% block body %}

    <body>
        <section>
            <div class="container py-5">
                <div class="row ">
                    <div class="col-lg-4 ">
                        <div class="card-body text-center">
                            <img src="{{ asset('img/Airplane.jpeg') }} "
                                 style=" box-shadow: 12px 29px 81px rgba(0,0,0,0.75); rgba(0,0,0,0.75); width: 300px; min-height: 300px;">
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="card mb-4 border-dark">
                            <div class="card-body">
                                <form method="post">
                                    {% if error %}
                                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                    {% endif %}

                                    {% if app.user %}
                                        <div class="mb-3">
                                            You are logged in as {{ app.user.userIdentifier }}, <a
                                                    href="{{ path('app_logout') }}">Logout</a>
                                        </div>
                                    {% endif %}

                                    <h1 class="h3 mb-3 font-weight-normal">Please Sign In</h1>
                                    <label for="inputEmail">Email</label>
                                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                                           class="form-control" autocomplete="email" required autofocus>
                                    <label for="inputPassword">Password</label>
                                    <input type="password" name="password" id="inputPassword" class="form-control"
                                           autocomplete="current-password" required>

                                    <input type="hidden" name="_csrf_token"
                                           value="{{ csrf_token('authenticate') }}"
                                    >

                                    <div class="checkbox mb-3">
                                        <label>
                                            <input type="checkbox" name="_remember_me"> Remember me
                                        </label>
                                    </div>
                                {% endif %}

                                <h1 class="h3 mb-3 font-weight-normal">Please Sign In</h1>
                                <label for="inputEmail">Email</label>
                                <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                                       class="form-control" autocomplete="email" required autofocus>
                                <label for="inputPassword">Password</label>
                                <input type="password" name="password" id="inputPassword" class="form-control"
                                       autocomplete="current-password" required>

                                <input type="hidden" name="_csrf_token"
                                       value="{{ csrf_token('authenticate') }}"
                                >

                                <div class="checkbox mb-3">
                                    <label>
                                        <input type="checkbox" name="_remember_me"> Remember me
                                    </label>
                                </div>
                                <div class="input-group mb-3">
                                    <button class="btn btn-light m-2 my-sm-0 " type="submit">
                                        Sign in
                                    </button>
                                    <button class="btn btn-light m-2 my-sm-0" ><a class="text-white" href="{{ path('app_forgot_password_request') }}">Forgot your password
                                            ?</a></button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </body>
{% endblock %}
