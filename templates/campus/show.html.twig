{% extends 'base.html.twig' %}

{% block title %}Campus{% endblock %}

{% block body %}
    <section>
        <br>
        <h1 class="text-center ">{{ campus.name }}</h1>
        <div class="container py-5 ">
            <div class="row ">
                <div class="col-lg-4 ">
                    <div class="card mb-4 border-dark">
                        <div class="card-body text-center ">
                            <img
                                    src="{{ asset('img/travelLogo/campus-bis.png') }}"
                                    alt="avatar" class="rounded-circle img-fluid"
                                    style="width: 150px"/>
                            <h5 class="my-3">{{ campus.name }}</h5>

                            <a class="btn btn-secondary m-2 my-sm-0 text-muted mb-1"
                               href="{{ path('app_campus_index') }}">back to Campus list</a>
                            <a class="btn btn-secondary m-2 my-sm-0 text-muted mb-1"
                               href="{{ path('app_campus_edit', {'id': campus.id}) }}">edit Campus</a>
                            {{ include('campus/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
