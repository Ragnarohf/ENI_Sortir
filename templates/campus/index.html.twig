{% extends 'base.html.twig' %}

{% block title %}Campus index{% endblock %}

{% block body %}

    <section>
        <h1 class="text-center">Campus List</h1>
        <div class="row">
        <a class="btn btn-primary href="{{ path('app_campus_new') }}">Create new Campus</a>
        <div class="container py-5">
            <div class="row">

                {% for campus in campuses %}
                <div class="col-lg-4">
                    <div class="card mb-4 border-dark">
                        <div class="card-body text-center ">
                            <img
                                    src="{{ asset('img/travelLogo/campus.jpg') }}"
                                    alt="avatar" class="rounded-circle img-fluid"
                                    style="width: 150px; height: 150px;"/>
                            <h5 class="my-3">{{ campus.name }}</h5>
                            <p class="text-muted mb-1"> Campus of {{ campus.name }}</p>

                            <div class="d-flex justify-content-center mb-2">
                                <a class="btn btn-info m-2 my-sm-2 " href="{{ path('app_campus_show', {'id': campus.id}) }}">show</a>
                                <a class="btn btn-info m-2 my-sm-2 " href="{{ path('app_campus_edit', {'id': campus.id}) }}">edit</a>
                            </div>
                        </div>
                    </div>
                </div>
                {% else %}
                    <tr>
                        <td colspan="11">no records found</td>
                    </tr>
                {% endfor %}
            </div>
        </div>
        </div>
    </section>
{% endblock %}
