{% extends 'base.html.twig' %}

{% block title %}Place{% endblock %}

{% block body %}
    <section>
        <br>
        <h1 class="text-center ">{{ place.name }}</h1>
        <div class="container py-5 >
            <div class=" row
        ">
        <div class="col-lg-4 ">
            <div class="card mb-4 border-dark">
                <div class="card-body text-center ">
                    <img
                            src="{{ asset('img/travelLogo/place.jpg') }}"
                            alt="avatar" class="rounded-circle img-fluid"
                            style="width: 150px"/>
                    <h5 class="my-3">{{ place.name }}</h5>

                    <p class="text-muted mb-1"> Street : {{ place.street }}</p>
                    <p class="text-muted mb-1"> Latitude : {{ place.latitude }}</p>
                    <p class="text-muted mb-1"> Longitude : {{ place.longitude }}</p>
                    <div class="d-flex justify-content-center mb-2">
                        <a href="{{ path('app_place_edit', {'id': place.id}) }}">edit Place</a>
                    </div>
                    <div class="d-flex justify-content-center mb-2">
                        <a href="{{ path('app_place_index') }}">back to Place list</a>
                    </div>
                    {{ include('place/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
        </div>
        </div>
    </section>
{% endblock %}
