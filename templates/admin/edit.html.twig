{% extends 'base.html.twig' %}

{% block title %}AdminEdit User{% endblock %}

{% block body %}
    <h1 class="text-center">Admin Profile's modification on {{ user.pseudo }}</h1>
    <div class="card-body px-4 py-5 px-md-5">
        <div class="row">
            <div class="mx-auto col-10 col-md-8 col-lg-6">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <button class="btn btn-primary">{{ button_label|default('Save Modification') }}</button>
                {{ form_end(form) }}
                <div>
                    <form method="post" action="{{ path('app_admin_user_delete', {'id': user.id}) }}"
                          onsubmit="return confirm('Are you sure you want to delete this item?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                        <button class="btn btn-primary">Delete User</button>
                    </form>
                </div>
                <div>
                    <button class="btn btn-primary"><a href="{{ path('app_admin_dashboard') }}">back to Admin list</a>
                    </button>
                </div>
            </div>

        </div>
    </div>





    </div>
{% endblock %}
