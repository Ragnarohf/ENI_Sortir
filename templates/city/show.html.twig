{% extends 'base.html.twig' %}

{% block title %}City{% endblock %}

{% block body %}
    <section>
        <div class="row ">

        <h1 class="text-center ">{{ city.name }}</h1>

        <div class="container py-5">

                <div class="col-lg-4 ">
                    <div class="card mb-4 border-dark">
                        <div class="card-body text-center ">
                            <img
                                    src="{{ asset('img/travelLogo/city.jpg') }}"
                                    alt="avatar" class="rounded-circle img-fluid"
                                    style="width: 150px"/>
                            <h5 class="my-3">{{ city.name }}</h5>
                            <h5 class="my-3">{{ city.zipCode }}</h5>

                            <a class="btn btn-secondary m-2 my-sm-0 text-muted mb-1"
                               href="{{ path('app_city_index') }}">back to City list</a>
                            <a class="btn btn-secondary m-2 my-sm-0 text-muted mb-1"
                               href="{{ path('app_campus_edit', {'id': city.id}) }}">edit City</a>
                            {{ include('city/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
