{% extends 'base.html.twig' %}

{% block title %}City index{% endblock %}

{% block body %}
    <section>
        <h1 class="text-center">City List</h1>
        <div class="container py-7  ">
            <div class="row mb-0">
                <div class="col-lg-3">
                    <a class="btn btn-primary href="{{ path('app_city_new') }}">Create new City</a>
                </div>
                {% for city in cities %}
                    <div class="col-lg-3">
                        <div class="card mb-4 border-dark">
                            <div class="card-body text-center ">
                                <img
                                        src="{{ asset('img/travelLogo/city.jpg') }}"
                                        alt="avatar" class="rounded-circle img-fluid"
                                        style="width: 150px; height: 150px;"/>
                                <h5 class="my-3">{{ city.name }}</h5>
                                <p class="text-muted mb-1"> City of {{ city.name }}</p>
                                <p class="text-muted mb-1"> ZipCode {{ city.zipCode }}</p>
                                <div class="d-flex justify-content-center mb-2">
                                    <a class="btn btn-info m-2 my-sm-2 "
                                       href="{{ path('app_city_show', {'id': city.id}) }}">show city</a>
                                    <a class="btn btn-info m-2 my-sm-2 "
                                       href="{{ path('app_city_edit', {'id': city.id}) }}">edit city</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <tr>
                        <td colspan="11">no records found</td>
                    </tr>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}

